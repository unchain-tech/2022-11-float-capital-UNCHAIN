{
  "name": "float-contracts",
  "version": "0.0.2-arctic",
  "main": "index.js",
  "license": "BUSL-1.1",
  "scripts": {
    "generate-metrics": "node ./scripts/code-metrics.js",
    "generate-gas-metrics": "./scripts/format-gas-report.sh",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "cp ./node_modules/forge-std/src/console2.sol ./node_modules/forge-std/console2.sol # needed to make console.log work in hardhat compile",
    "compile": "hardhat compile",
    "lint-contracts": "solhint 'contracts/**/*.sol'",
    "format-contracts": "prettier --write 'contracts/**/*.sol' --plugin=prettier-plugin-solidity",
    "dodoc-gen": "hardhat dodoc",
    "deploy-local-base": "forge script contracts/scripts/Arctic.s.sol:ArcticDeployBase --private-key '0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80' --rpc-url 'http://localhost:8545' --broadcast  -vvv",
    "deploy-local": "forge script contracts/scripts/Arctic.s.sol:ArcticDeployAll --sig 'localDeployment()' --private-key '0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80' --rpc-url 'http://localhost:8545' --broadcast  -vvv",
    "deploy-mumbai": "source .env && forge script contracts/scripts/Arctic.s.sol:ArcticDeployAll --private-key $PRIVATE_KEY --rpc-url $MUMBAI_RPC_URL --verify --slow --gas-price 200 --etherscan-api-key $POLYGONSCAN_API_KEY -vvv",
    "deploy-fuji": "source .env && forge script contracts/scripts/Arctic.s.sol:ArcticDeployAll --private-key $PRIVATE_KEY --rpc-url $FUJI_RPC_URL --verify --etherscan-api-key $SNOWTRACE_API_KEY -vvv",
    "print-contract-addresses-mumbai": "source .env && forge script contracts/scripts/util/PrintContractAddresses.s.sol:PrintAddressesFromKeeper --rpc-url $MUMBAI_RPC_URL -vv",
    "print-contract-addresses-fuji": "source .env && forge script contracts/scripts/util/PrintContractAddresses.s.sol:PrintAddressesFromKeeper --rpc-url $FUJI_RPC_URL  -vv",
    "print-verify-cmds-mumbai": "source .env && forge script contracts/scripts/util/PrintContractAddresses.s.sol:PrintVerificationCmdsFromKeeper --rpc-url $MUMBAI_RPC_URL -vv",
    "print-verify-cmds-fuji": "source .env && forge script contracts/scripts/util/PrintContractAddresses.s.sol:PrintVerificationCmdsFromKeeper --rpc-url $FUJI_RPC_URL  -vv"
  },
  "dependencies": {
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@prb/math": "^2.5.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "hardhat": "^2.6.2",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-output-validator": "^0.1.19",
    "random": "^3.0.6",
    "seedrandom": "^3.0.5",
    "solc": "^0.8.13",
    "solidity-code-metrics": "^0.0.22",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "dotenv": "^10.0.0",
    "ethers": "^5.6.9",
    "forge-std": "https://github.com/Float-Capital/forge-std.git",
    "hardhat-abi-exporter": "^2.4.0",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "v1.0.0-beta.24",
    "solhint": "^3.3.6"
  }
}
